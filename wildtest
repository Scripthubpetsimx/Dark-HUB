-- Booting the Library
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/jensonhirst/Orion/main/source'))()

-- Create Main Window
local Window = OrionLib:MakeWindow({
    Name = "EXECUTIVERAT IN THE SEWER",
    HidePremium = false,
    SaveConfig = false,
    IntroEnabled = true,
    IntroText = "EXECUTIVERAT",
    ConfigFolder = "OrionConfig"
})

-- Initial Notification
OrionLib:MakeNotification({
    Name = "EXECUTIVERAT",
    Content = "Snatched Scripts - Summer Event Script 9999+ points",
    Time = 5
})

-- Tab 1: Loader
local LoaderTab = Window:MakeTab({
    Name = "Loader",
    Icon = "rbxassetid://7733955741"
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v1",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/main/Loader/LoaderV1.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v2",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/main/Loader/LoaderV2.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v3",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/main/Loader/LoaderV3.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "Aussie-WIRE",
    Callback = function()
        loadstring(game:HttpGet("https://scriptblox.com/raw/Grow-a-Garden-Aussie-WIRE-vs-GrowAGarden-42380"))()
    end
})

-- Tab 2: DUPE/VULN (Key System)
local DupeTab = Window:MakeTab({
    Name = "DUPE/VULN",
    Icon = "rbxassetid://7734068321"
})

-- Key System
local correctKey = "EXECUTIVERAT_FREE_aMB0Ts12s4gjaivmr_var111113321321123"
local keyInput = ""
local keyVerified = false

-- Create containers for key UI and dupe features
local keyContainer = {}
local dupeContainer = {}

-- Key UI elements
keyContainer.copyBtn = DupeTab:AddButton({
    Name = "Copy Key Link",
    Callback = function()
        setclipboard("https://link-center.net/431614/EQVrnV89bzeb")
        OrionLib:MakeNotification({
            Name = "COPIED",
            Content = "Key link copied to clipboard!",
            Time = 3
        })
    end
})

keyContainer.textbox = DupeTab:AddTextbox({
    Name = "Enter Key",
    Default = "",
    TextDisappear = false,
    Callback = function(Value)
        keyInput = Value
    end
})

keyContainer.submitBtn = DupeTab:AddButton({
    Name = "Submit Key",
    Callback = function()
        if keyInput == correctKey then
            keyVerified = true
            OrionLib:MakeNotification({
                Name = "SUCCESS",
                Content = "Key accepted! Loading DUPE/VULN features...",
                Time = 3
            })
            LoadDupeFeatures()
        else
            OrionLib:MakeNotification({
                Name = "ERROR",
                Content = "Invalid key!",
                Time = 3
            })
        end
    end
})

-- Function to create DUPE features (but keep them hidden initially)
function CreateDupeFeatures()
    -- VULN Features (PATCHED)
    dupeContainer.skipCraftLabel = DupeTab:AddLabel("Skip Craft Time (PATCHED)")
    dupeContainer.skipSeedLabel = DupeTab:AddLabel("Skip Seed Time (PATCHED)")
    dupeContainer.eggESP = DupeTab:AddButton({Name = "Egg ESP", Callback = function() end})
    
    -- Egg Finder Dropdown
    dupeContainer.eggFinder = DupeTab:AddDropdown({
        Name = "Egg Finder",
        Default = "Select Egg",
        Options = {
            "Raccoon (Night Egg)", 
            "Disco Bee (Anti Bee Egg)", 
            "Butterfly (Anti Bee Egg)", 
            "Queen Bee (Bee Egg)", 
            "Red Fox (Mythical Egg)", 
            "Mimic Octopus (Paradise Egg)"
        },
        Callback = function(Value) 
            OrionLib:MakeNotification({
                Name = "Egg Selected",
                Content = "Finding: "..Value,
                Time = 3
            })
        end
    })
    
    dupeContainer.eggHop = DupeTab:AddButton({
        Name = "Egg Hop", 
        Callback = function() 
            OrionLib:MakeNotification({
                Name = "Egg Hop",
                Content = "Searching for egg servers...",
                Time = 3
            })
        end
    })

    -- DUPE Features
    dupeContainer.dupeLabel = DupeTab:AddLabel("DUPE -")
    
    -- Pet Selection
    local selectedPet = ""
    dupeContainer.petDropdown = DupeTab:AddDropdown({
        Name = "Select Pet",
        Default = "Select Pet",
        Options = {
            "Raccoon", 
            "Disco Bee", 
            "Butterfly", 
            "Queen Bee", 
            "Red Fox", 
            "Mimic Octopus"
        },
        Callback = function(Value) 
            selectedPet = Value
        end
    })
    
    -- Size and Age Inputs
    local petSize, petAge = 1, 1
    dupeContainer.sizeInput = DupeTab:AddTextbox({
        Name = "Size (Number)",
        Default = "1",
        TextDisappear = false,
        Callback = function(Value) 
            petSize = tonumber(Value) or 1
        end
    })
    
    dupeContainer.ageInput = DupeTab:AddTextbox({
        Name = "Age (Number)",
        Default = "1",
        TextDisappear = false,
        Callback = function(Value) 
            petAge = tonumber(Value) or 1
        end
    })
    
    dupeContainer.executeBtn = DupeTab:AddButton({
        Name = "Execute Dupe",
        Callback = function()
            if selectedPet == "" then
                OrionLib:MakeNotification({
                    Name = "ERROR",
                    Content = "Select a pet first!",
                    Time = 3
                })
                return
            end
            OrionLib:MakeNotification({
                Name = "DUPE STARTED",
                Content = string.format("Duping %s (Size: %d, Age: %d)", selectedPet, petSize, petAge),
                Time = 5
            })
        end
    })
    
    dupeContainer.compatibility = DupeTab:AddLabel("Server Dupe Compatibility: Not Compatible")
    
    -- Steal Fruits Section
    local stealUsername = ""
    dupeContainer.stealLabel = DupeTab:AddLabel("Steal Others Fruit")
    dupeContainer.stealInput = DupeTab:AddTextbox({
        Name = "Username",
        Default = "",
        TextDisappear = false,
        Callback = function(Value) 
            stealUsername = Value
        end
    })
    
    dupeContainer.whitelistBtn1 = DupeTab:AddButton({
        Name = "Whitelist User",
        Callback = function() 
            if stealUsername == "" then return end
            OrionLib:MakeNotification({
                Name = "WHITELISTED",
                Content = "Added "..stealUsername.." to whitelist",
                Time = 3
            })
        end
    })
    
    -- Shovel Section
    local shovelUsername = ""
    dupeContainer.shovelLabel = DupeTab:AddLabel("Shovel Other Garden Fruits")
    dupeContainer.shovelInput = DupeTab:AddTextbox({
        Name = "Username",
        Default = "",
        TextDisappear = false,
        Callback = function(Value) 
            shovelUsername = Value
        end
    })
    
    dupeContainer.whitelistBtn2 = DupeTab:AddButton({
        Name = "Whitelist User",
        Callback = function() 
            if shovelUsername == "" then return end
            OrionLib:MakeNotification({
                Name = "WHITELISTED",
                Content = "Added "..shovelUsername.." to whitelist",
                Time = 3
            })
        end
    })
    
    -- Teleport Button
    dupeContainer.teleportBtn = DupeTab:AddButton({
        Name = "Teleport to EASTER SHOP",
        Callback = function() 
            OrionLib:MakeNotification({
                Name = "TELEPORTING",
                Content = "Teleporting to Easter Shop...",
                Time = 3
            })
        end
    })
    
    -- Status Message
    dupeContainer.status = DupeTab:AddParagraph(
        "STATUS", 
        "ALL VULN SCRIPTS ARE PATCHED AND NOW FIXING, DUPE WILL BE COMING TONIGHT LATER"
    )
    
    -- Hide all dupe features initially
    for name, element in pairs(dupeContainer) do
        if element.Instance then
            element.Instance.Visible = false
        end
    end
end

-- Function to show DUPE features after key verification
function LoadDupeFeatures()
    if not keyVerified then return end
    
    -- Hide key elements
    keyContainer.copyBtn.Instance.Visible = false
    keyContainer.textbox.Instance.Visible = false
    keyContainer.submitBtn.Instance.Visible = false
    
    -- Show dupe features
    for name, element in pairs(dupeContainer) do
        if element.Instance then
            element.Instance.Visible = true
        end
    end
end

-- Create the dupe features but keep them hidden
CreateDupeFeatures()

-- Tab 3: Animations

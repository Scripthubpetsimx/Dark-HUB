-- Load Orion Library
local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/jensonhirst/Orion/main/source')))()

-- Create Window with Custom Title
local Window = OrionLib:MakeWindow({
    Name = "EXECUTIVERAT IN THE SEWER",
    HidePremium = false,
    SaveConfig = false,
    IntroEnabled = true,
    IntroText = "EXECUTIVERAT",
    ConfigFolder = "OrionConfig"
})

-- Show Initial Notification
OrionLib:MakeNotification({
    Name = "EXECUTIVERAT",
    Content = "Snatched Scripts - Summer Event Script 9999+ points",
    Time = 5
})

-- Tab 1: Loader
local LoaderTab = Window:MakeTab({
    Name = "Loader",
    Icon = "rbxassetid://7733955741",
    PremiumOnly = false
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v1",
    Callback = function()
        loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/refs/heads/main/Loader/LoaderV1.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v2",
    Callback = function()
        loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/refs/heads/main/Loader/LoaderV2.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "No-Lag OFFICIAL v3",
    Callback = function()
        loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/NoLag-id/No-Lag-HUB/refs/heads/main/Loader/LoaderV3.lua"))()
    end
})

LoaderTab:AddButton({
    Name = "Aussie-WIRE",
    Callback = function()
        loadstring(game:HttpGet("https://scriptblox.com/raw/Grow-a-Garden-Aussie-WIRE-vs-GrowAGarden-42380"))()
    end
})

-- Tab 2: DUPE/VULN (Key System)
local DupeTab = Window:MakeTab({
    Name = "DUPE/VULN",
    Icon = "rbxassetid://7734068321",
    PremiumOnly = false
})

-- Key System
local CorrectKey = "EXECUTIVERAT" -- Change this to your desired key
local KeyInput = nil

DupeTab:AddTextbox({
    Name = "Enter Key",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        KeyInput = Value
    end
})

DupeTab:AddButton({
    Name = "Submit Key",
    Callback = function()
        if KeyInput == CorrectKey then
            OrionLib:MakeNotification({
                Name = "SUCCESS",
                Content = "Key accepted! Loading DUPE scripts...",
                Time = 3
            })
            -- Add your DUPE/VULN scripts here after key verification
            -- Example: loadstring(game:HttpGet("YOUR_DUPE_SCRIPT"))()
        else
            OrionLib:MakeNotification({
                Name = "ERROR",
                Content = "Invalid key!",
                Time = 3
            })
        end
    end
})

-- Tab 3: Animations
local AnimTab = Window:MakeTab({
    Name = "Animations",
    Icon = "rbxassetid://7733684335",
    PremiumOnly = false
})

-- Keyboard Animation (Working Script)
AnimTab:AddButton({
    Name = "Keyboard",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/advxzivhsjjdhxhsidifvsh/mobkeyboard/main/main.txt"))()
    end
})

-- UFWboo Tool with Warning
AnimTab:AddButton({
    Name = "UFWboo Tool",
    Callback = function()
        OrionLib:MakeAlert({
            Title = "WARNING",
            Content = "You have granted a Tool Animation, check your Inventory",
            Buttons = {
                {
                    Text = "OK",
                    Callback = function()
                        loadstring(game:HttpGet("https://raw.githubusercontent.com/LolnotaKid/SCRIPTSBYVEUX/main/UFWboo.txt"))()
                    end
                },
                {
                    Text = "Cancel",
                    Callback = function()
                        OrionLib:MakeNotification({
                            Name = "Cancelled",
                            Content = "Action aborted.",
                            Time = 3
                        })
                    end
                }
            }
        })
    end
})

-- Killer Animation
AnimTab:AddButton({
    Name = "Killer Animation",
    Callback = function()
        loadstring(game:HttpGet("https://pastefy.app/riYch0rX/raw"))()
    end
})

-- Psycho Animation
AnimTab:AddButton({
    Name = "Psycho Animation",
    Callback = function()
        loadstring(game:HttpGet("https://pastefy.app/YJITpCRA/raw"))()
    end
})

-- Initialize UI
OrionLib:Init()
